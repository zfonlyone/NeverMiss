{
  "name": "nevermiss",
  "version": "1.1.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "eslint .",
    "type-check": "tsc",
    "clean": "expo start --clear",
    "doctor": "npx expo-doctor",
    "update-deps": "expo install --check",
    "prebuild": "expo prebuild",
    "build:android": "eas build -p android",
    "build:ios": "eas build -p ios"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "~14.0.0",
    "@gorhom/bottom-sheet": "^5.1.2",
    "@react-native-async-storage/async-storage": "~1.23.1",
    "@react-native-community/datetimepicker": "~8.2.0",
    "@react-native-picker/picker": "2.9.0",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/native-stack": "^7.2.0",
    "@react-navigation/stack": "^7.1.2",
    "date-fns": "~3.6.0",
    "expo": "~52.0.41",
    "expo-asset": "~11.0.4",
    "expo-background-fetch": "~13.0.5",
    "expo-background-task": "^0.1.3",
    "expo-build-properties": "~0.13.2",
    "expo-calendar": "~14.0.6",
    "expo-constants": "~17.0.8",
    "expo-device": "~7.0.2",
    "expo-document-picker": "~13.0.3",
    "expo-file-system": "~18.0.11",
    "expo-font": "~13.0.4",
    "expo-linking": "~7.0.5",
    "expo-notifications": "~0.29.14",
    "expo-router": "~4.0.19",
    "expo-sharing": "~13.0.1",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "expo-system-ui": "~4.0.8",
    "expo-task-manager": "~12.0.5",
    "expo-web-browser": "~14.0.2",
    "lunar-javascript": "~1.7.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-paper": "^5.13.1",
    "react-native-picker-select": "^9.3.1",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "~4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-svg": "~15.8.0",
    "react-native-vector-icons": "^10.2.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/plugin-transform-export-namespace-from": "^7.25.9",
    "@babel/preset-react": "^7.26.3",
    "@types/react": "~18.3.12",
    "@types/react-native": "^0.72.8",
    "@types/uuid": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.6",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.1.3"
  },
  "private": true,
  "comments": {
    "removedDependencies": [
      "expo-sqlite - 在 Expo SDK 52 中已移除，改用 AsyncStorage 存储数据"
    ]
  },
  "expo": {
    "name": "NeverMiss",
    "slug": "nevermiss",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zfonlyone.nevermiss"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.zfonlyone.nevermiss"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-calendar",
      "expo-document-picker",
      "expo-sharing"
    ],
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  }
}
